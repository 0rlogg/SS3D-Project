<%- include ("../layouts/cabecera.ejs")%>

<form method="post" action="/estrellas">
  <div class="form-group">
    <label for="my-input">Nombre estrella</label>
    <input
      id="my-input"
      class="form-control"
      type="text"
      name="nombreestrella"
      minlength="3"
      required
    />
  </div>

  <div class="form-group">
    <label for="my-input">Descripcion</label>
    <input
      id="my-input"
      class="form-control"
      type="text"
      name="descripcion"
      minlength="10"
      required
    />
  </div>

  <div class="form-group">
    <label for="my-input">Imagen</label>
    <input id="my-input" class="form-control-file" type="file" name="textura" />
  </div>

  <button class="btn btn-primary" type="submit" enctype="multipart/form-data">
    Guardar
  </button>
</form>

