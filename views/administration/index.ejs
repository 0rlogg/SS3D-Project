
<%- include ("../layouts/cabecera.ejs") %> 
      <br>
      <br>
      <a href="/administration/crear" class="btn btn-primary" type="button">Crear nuevo planeta</a>
      <br>
      <br>
      <div class="contenedor">
        <h1>Página de Inicio</h1>
      </div>
      <table class="table table-light">
        <thead class="thead-light">
          <tr>
             <th>#</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Número de satelites</th>
            <th>Textura</th>
          </tr>
        </thead>
        <tbody>

  
          <% for( let planeta = 0; planeta < planetas.length; planeta++ ) { %>
          
            <tr>
              <td> <%= planetas[planeta].id %>  </td>
              <td> <%= planetas[planeta].nombre %> </td> 
              <td> <%= planetas[planeta].descripcion %> </td>
              <td> <%= planetas[planeta].numsatelites %> </td>
              <td><img class="img-thumbnail" src="img/<%= planetas[planeta].textura %>"> </td>
              <td>
                <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                  <form class="form-inline" method="get" action="/administration/editar/<%= planetas[planeta].id %>">
                    <button class="btn btn-warning" type="submit">EDITAR</button>
                  </form>
                </td>
                <td>
                </div>
                <div class="btn-group-vertical" role="group" aria-label="Vertical button group">
                <form class="form-inline" method="post" action="/administration/eliminar/<%= planetas[planeta].id %>">
                  <button class="btn btn-danger" type="submit">ELIMINAR</button>
                </form>
              </div> 
           
                
              </td>
    
            </tr>
  
          <% } %>
  
          <br>
  
        </tbody>
      </table>

</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
